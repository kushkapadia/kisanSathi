    <style>
        /* Chat containers */
        .container {
            border: 2px solid #ffffff;
            background-color: white;
            border-radius: 5px;
            color: black;
            padding: 10px;
            margin: 10px 0;
            width: auto;
            min-width: 20rem;
            max-width: 70rem;
        }

        /* Darker chat container */
        .darker {
            border-color: #1c3ee7;
            background-color: #3A57E8;
            color: white;
            width: auto;
            min-width: 20rem;
            max-width: 70rem;
            margin-left: auto;
            margin-right: 0;

        }

        /* Clear floats */
        .container::after {
            content: "";
            clear: both;
            display: table;
        }

        /* Style images */
        .container img {
            float: left;
            max-width: 60px;
            width: 100%;
            margin-right: 20px;
            border-radius: 50%;
        }

        /* Style the right image */
        .container img.right {
            float: right;
            margin-left: 20px;
            margin-right: 0;
        }

        /* Style time text */
        .time-right {
            float: right;
            color: #aaa;
        }

        /* Style time text */
        .time-left {
            float: left;
            color: #999;
        }



        /* This is the css of the input */
        #w-input-container {
            min-height: 20px;
            box-sizing: border-box;
            padding: 9px 18px 11px;
            margin: 5px 10px;
            background-color: #fff;
            border: 1px solid #fff;
            border-radius: 21px;
        }

        .w-input-text-group {
            position: absolute;
        }

        .w-placeholder {
            color: #a0a0a0;
            top: 0;
            pointer-events: none;
            user-select: none;
            position: absolute;
            opacity: 0;
            transition: 0.2s padding ease-in-out;
        }

        #w-input-text {
            overflow-x: hidden;
            overflow-y: auto;
            white-space: pre-wrap;
            word-wrap: break-word;
            z-index: 1;
            max-height: 100px;
            min-height: 20px;
            padding: 0 0 0 2px;
            outline: 0;
            transition: 0.2s padding ease-in-out;
        }

        #w-input-text:empty+.w-placeholder {
            opacity: 1;
        }

        #w-input-text:focus+.w-placeholder {
            padding: 0 6px 0px;
        }

        #w-input-text:focus {
            padding: 0 6px 0px;
        }

        #sendBtn {
            border-radius: 0 15px 15px 0 !important;
            color: white !important;
            height: 4rem !important;
        }
    </style>

