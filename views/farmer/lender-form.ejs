   <script>
      function updateFields() {
         var selectValue = document.getElementById("itemCategory").value;
         switch (selectValue) {
            case "machinery":
               document.getElementById("itemQuantity").style.display = "block";
               document.getElementById("itemName").style.display = "block";
               document.getElementById("sqFeets").style.display = "none";
               break;
            case "storageHouse":
               document.getElementById("itemQuantity").style.display = "none";
               document.getElementById("itemName").style.display = "none";
               document.getElementById("sqFeets").style.display = "block";
               break;
            case "tools":
               document.getElementById("itemQuantity").style.display = "block";
               document.getElementById("itemName").style.display = "block";
               document.getElementById("sqFeets").style.display = "none";
               break;

            case "attachments":
               document.getElementById("itemQuantity").style.display = "block";
               document.getElementById("itemName").style.display = "block";
               document.getElementById("sqFeets").style.display = "none";
               break;

            default:
               document.getElementById("itemQuantity").style.display = "block";
               document.getElementById("itemName").style.display = "block";
               document.getElementById("sqFeets").style.display = "none";
               break;
         }
      }
   </script>
