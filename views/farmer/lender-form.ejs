   <div class="conatiner-fluid content-inner mt-n5 py-0">
      <div>
         <div class="row">

            <div class="col-xl-12">
               <div class="card">
                  <div class="card-header d-flex justify-content-between">
                     <div class="header-title">
                        <h4 class="card-title">Fill The Details of The Item Which You Want To Rent</h4>
                     </div>
                  </div>
                  <div class="card-body">
                     <div class="new-user-info">
                        <form action="/lease-item" method="POST" enctype="multipart/form-data">

                           <div class="form-group col-md-12">
                              <select class="form-select" name="itemCategory" id="itemCategory"
                                 onchange="updateFields()" required>
                                 <option selected>Select Category</option>
                                 <option value="machinery">Machinery</option>
                                 <option value="storageHouse">Storage House</option>
                                 <option value="tools">Equipment</option>
                                 <option value="attachments">Attachments</option>
                              </select>
                           </div>

                           <div class="row">
                              <div class="form-group col-md-6" id="itemName">
                                 <label class="form-label" for="itemName">Name of the Item:</label>
                                 <input type="text" name="itemName" class="form-control" id="itemName"
                                    placeholder="e.g. Harrow" required>
                              </div>

                              <div class="form-group col-md-6" id="sqFeets">
                                 <label class="form-label" for="sqFeets">Area of Storage Space</label>
                                 <input type="text" name="sqFeets" class="form-control" id="sqFeets"
                                    placeholder="e.g. 20 square km">
                              </div>

                              <div class="form-group col-md-6">
                                 <label class="form-label" for="">Upload a Image:</label>
                                 <input type="file" name="itemFile" class="form-control" id="itemFile">
                              </div>

                              <div class="form-group col-md-12">
                                 <label class="form-label" for="itemDescription">Description:</label>
                                 <textarea name="itemDescription" required class="form-control" id="itemDescription"
                                    placeholder="e.g. Information about the State, Condition of the Item / Storage Space"></textarea>
                              </div>

                              <div class="form-group col-md-12">
                                 <label class="form-label" for="address">Address:</label>
                                 <textarea name="address" required class="form-control" id="address"
                                    placeholder="Your Address"></textarea>
                              </div>

                              <div class="form-group col-md-6">
                                 <label class="form-label" for="rentPerDay">Rent per Day: ₹</label>
                                 <input type="number" min="0" name="rentPerDay" class="form-control" id="rentPerDay"
                                    placeholder="e.g 200" required>
                              </div>

                              <div class="form-group col-md-6">
                                 <label class="form-label" for="rentDeposit">Deposit: ₹</label>
                                 <input type="number" min="0" name="rentDeposit" class="form-control" id="rentDeposit"
                                    placeholder="e.g 1000" required>
                              </div>

                              <div class="form-group col-md-12" id="itemQuantity">
                                 <label class="form-label" for="itemQuantity">Quantity:</label>
                                 <input type="number" min="0" name="itemQuantity" class="form-control" id="itemQuantity"
                                    placeholder="e.g. 30" required>
                              </div>

                              <hr>
                              <button type="submit" class="btn btn-primary">Publish Item</button>
                        </form>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
