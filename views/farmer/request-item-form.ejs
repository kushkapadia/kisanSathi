                  <div class="card-header d-flex justify-content-between">
                     <div class="header-title">
                        <h4 class="card-title">Request Item availability</h4>
                     </div>
                  </div>
                  <div class="card-body">
                     <p>Select the Date Rent the Item</p>
                     <form action="/ask-for-availability/<%=itemDoc._id%>" method="POST" class="row g-3 needs-validation">
                        <div class="col-md-6">
                           <label for="fromDate" class="form-label">From Date</label>
                           <input type="date" name="fromDate" class="form-control" id="fromDate" required>
                           <div class="valid-feedback">
                              Looks good!
                           </div>
                        </div>
                        <div class="col-md-6">
                           <label for="tillDate" class="form-label">Till Date</label>
                           <input type="date" name="toDate" class="form-control" id="tillDate" required>
                           <div class="valid-feedback">
                              Looks good!
                           </div>
                        </div>
                        <% // daily rate
                        const dailyRate = itemDoc.rentPerDay;
                        
                        // calculate rate in milliseconds
                        const rateInMs = dailyRate / (24 * 60 * 60 * 1000);
                   
                        %>
                        <div class="col-md-6">
                           <label for="totalCost" class="form-label">Rent Amount</label>
                           <input type="text" name = "totalRentingAmount" class="form-control" id="totalCost" value="<%=rateInMs%>" readonly>
                           <div class="invalid-feedback">
                              Please provide a valid zip.
                           </div>
                        </div>
                        <!-- <div class="col-lg-12"> -->
                           <button class="btn btn-primary" type="submit">Request Availability</button>
                        <!-- </div> -->
                     </form>
                  </div>
