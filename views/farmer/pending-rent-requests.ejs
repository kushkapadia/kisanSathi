      <div class="conatiner-fluid content-inner mt-n5 py-0">
   <div class="row">
      <div class="col-sm-12">
         <div class="card">
            <div class="card-header d-flex justify-content-between">
               <div class="header-title">
                  <h4 class="card-title">Requests of Farmers Who Want to Borrow Your Item</h4>
               </div>
            </div>
            <div class="card-body">
               <div class="table-responsive">
                  <table id="datatable" class="table table-striped" data-toggle="data-table">
                     <thead style="text-align: center;">
                        <tr>
                           <th>Borrower Name</th>
                           <th>From Date</th>
                           <th>To Date</th>
                           <th>Item Name</th>
                           <th>Total Rent</th>
                           <th>Reputation Score</th>
                           <th>Action</th>
                        </tr>
                     </thead>
                     <tbody style="text-align: center;">
                       <% pendingRequests.forEach((request)=>{  %>               
                        <tr>
                           <td><%=request.borrowerName%></td>
                           <td><%=request.fromDate.getDate()%>/<%=request.fromDate.getMonth() +1%>/<%=request.fromDate.getFullYear()%></td>
                           <td><%=request.toDate.getDate()%>/<%=request.toDate.getMonth() +1%>/<%=request.toDate.getFullYear()%></td>
                           <td><%=request.itemName%></td>
                           <td><%=request.totalRentingAmount%></td>
                           <td><%=request.rating%></td>
                           <td class="d-flex align-items-center justify-content-between">
                              <form class="me-3" method="POST" action="/change-request-status/<%=request._id%>">
                                 <input type="hidden" name="status" value="approved" id="">
                                 <button type="submit" class="btn btn-success">Approve Request</button>
                              </form>

                            <form action="/change-request-status/<%=request._id%>" method="POST">
                              <input type="hidden" name="status" value="rejected" id="">
                               <button type="submit" class="btn btn-danger">Reject Request</button>
                            </form>
                           </td>
                        </tr>
                     <% }) %>
                     </tbody>
