    <script>

        generate();

        function generate() {
            let _id = document.querySelector("#id").value

            var qrcode = new QRCode(document.querySelector(".qr-code"), {
                text: `${_id}`,

                width: 300, //default 128
                height: 300,
                colorDark: "#000000",
                colorLight: "#ffffff",
                correctLevel: QRCode.CorrectLevel.H
            });
        } 
    </script>

